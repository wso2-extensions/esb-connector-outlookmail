<component name="attachments" type="synapse/template">
    <subComponents>
        <component name="getAttachment">
            <file>getAttachment.xml</file>
            <description>Get an attachment from a particular message.</description>
        </component>
        <component name="getAttachmentCollection">
            <file>getAttachmentCollection.xml</file>
            <description>Get the attachments from a particular message.</description>
        </component>
        <component name="deleteAttachment">
            <file>deleteAttachment.xml</file>
            <description>Delete a message attachment.</description>
        </component>
        <component name="createAttachment">
            <file>createAttachment.xml</file>
            <description>Create a file attachment.</description>
        </component>
    </subComponents>
</component>
